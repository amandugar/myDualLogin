<%- include('partials/header') %>
  <div class="container mt-5">
    <h1>Agent Register</h1>
    <div class="row">
      <div class="col-sm-8">
        <div class="card">
          <div class="card-body">
            <form action="/agentRegister" method="POST" onsubmit="return checkPassword()">
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="email" required>
              </div>
              <div class="form-group">
                <label for="email">Agent ID</label>
                <input type="text" class="form-control" name="username" required>
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password" required>
              </div>
              <div class="form-group" id=cfDiv>
                <label for="password">Confirm Password</label>
                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
              </div>
              <div class="form-group">
                <label for="privateKey">Secret Key</label>
                <input type="text" class="form-control" name="secretKey" required>
              </div>
              <button type="submit" class="btn btn-dark">Register new Agent</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
<%- include('partials/footer') %>